<maui:MauiWinUIApplication
    x:Class="WhereToFly.App.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui">

    <maui:MauiWinUIApplication.Resources>
        <ResourceDictionary>
            <!-- Hamburger menu colors -->
            <StaticResource x:Key="NavigationViewItemBackground" ResourceKey="PrimaryBrush" />
            <SolidColorBrush x:Key="PrimaryBrush" Color="#2F299E" />

            <StaticResource x:Key="NavigationViewItemForeground" ResourceKey="WhiteBrush" />
            <SolidColorBrush x:Key="WhiteBrush" Color="White" />
        </ResourceDictionary>
    </maui:MauiWinUIApplication.Resources>

</maui:MauiWinUIApplication>
