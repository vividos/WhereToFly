<?xml version="1.0" encoding="UTF-8"?>
<views:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:views="clr-namespace:WhereToFly.App.Views"
                     x:Class="WhereToFly.App.Views.FindLocationPopupPage"
                     x:TypeArguments="x:String">

    <!-- popup content -->
    <StackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        HeightRequest="140"
        WidthRequest="300"
        BackgroundColor="{DynamicResource PopupPageBackgroundColor}"
        Padding="20">

        <!-- text, entry control to enter location text and button -->
        <Label Text="Find location" FontSize="Large" />
        <Entry x:Name="locationEntry"
               Placeholder="enter location"
               BackgroundColor="{DynamicResource ElementOnPopupPageBackgroundColor}" />
        <Button Text="Find" Clicked="OnClickedFindButton" />
    </StackLayout>

</views:BasePopupPage>
