<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:d="http://xamarin.com/schemas/2014/forms/design"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:WhereToFly.App.Core"
            xmlns:viewmodels="clr-namespace:WhereToFly.App.Core.ViewModels"
            mc:Ignorable="d"
            x:Class="WhereToFly.App.Core.Views.TrackInfoTabbedPage"
            x:DataType="viewmodels:TrackTabViewModel"
            Title = "Track infos"
            BackgroundColor="{DynamicResource PageBackgroundColor}">

    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="Zoom to"
                     IconImageSource="{local:Image magnify_plus_outline}"
                     Command="{Binding ZoomToTrackCommand}"
                     Order="Primary" Priority="0" />

        <ToolbarItem Text="Export"
                     IconImageSource="{local:Image export_variant}"
                     Command="{Binding ExportTrackCommand}"
                     Order="Primary" Priority="0" />

        <ToolbarItem Text="Delete"
                     IconImageSource="{local:Image delete}"
                     Command="{Binding DeleteTrackCommand}"
                     IsDestructive="True"
                     Order="Primary" Priority="1" />
    </TabbedPage.ToolbarItems>

</TabbedPage>
