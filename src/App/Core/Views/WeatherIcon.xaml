<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereToFly.App.Core.Views.WeatherIcon">
    <ContentView.Content>
        <!-- Square layout -->
        <StackLayout WidthRequest="100" HeightRequest="100"
                     Margin="16,16,0,0"
                     BackgroundColor="#efefef">

            <!-- Recognize taps anywhere in the layout -->
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding Tapped}" />
            </StackLayout.GestureRecognizers>

            <!-- Controls -->
            <Image Source="{Binding Icon, Mode=OneWay}"
                   WidthRequest="60" HeightRequest="60" />

            <Label Text="{Binding Title, Mode=OneTime}" FontSize="Medium"
                   HorizontalTextAlignment="Center"
                   TextColor="Black"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>
