{
  "$schema": "https://raw.githubusercontent.com/dotnet/Nerdbank.GitVersioning/main/src/NerdBank.GitVersioning/version.schema.json",
  "version": "1.15.0",
  "assemblyVersion": {
    "precision": "build" // build means a.b.c
  },
  "nugetPackageVersion": {
    "semVer": 2
  },
  "gitCommitIdShortAutoMinimum": 7,
  "publicReleaseRefSpec": [
    "^refs/heads/main$", // release out of main
    "^refs/tags/version-\\d+\\.\\d+\\.\\d+" // also release tags starting with version-N.N.N
  ],
  "cloudBuild": {
    "buildNumber": {
      "enabled": true
    }
  }
}
