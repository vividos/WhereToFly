<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    <title>@ViewData["Title"] - Where-to-fly</title>
    <link rel="shortcut icon" type="image/png" href="favicon.png" />

    <environment include="Development">
        <script type="module" src="~/js/site.bundle.js" defer></script>
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <script type="module" src="~/js/site.bundle.js" defer></script>
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>

    @await RenderSectionAsync("Scripts", required: false)
</head>
<body>
    <nav id="navbar" class="navbar fixed-top navbar-expand-lg navbar-dark mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="/favicon.png" width="30" height="30" alt="logo">
                Where-to-fly Live Tracking
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 md-md-0">
                    <li class="nav-item">
                        <form class="d-flex" id="findForm" style="margin-right:8px">
                            <input class="form-control me-2" type="search" id="findValue" placeholder="Find location" aria-label="Find location">
                            <button class="btn btn-outline-light" type="submit">Find</button>
                        </form>
                    </li>

                    <li class="nav-item">
                        <button type="button" id="sidebarCollapse" class="btn btn-outline-light"
                                data-bs-toggle="offcanvas" data-bs-target="#sidebar">
                            <em class="fas fa-align-left"
                                data-bs-toggle="offcanvas" data-bs-target="#sidebar"></em>
                            <span>Show Sidebar</span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

</body>
</html>
