{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [ "error", 4 ],
        "curly": [ "error", "multi-or-nest" ],
        "quotes": [ "error", "double" ],
        "padded-blocks": "off",
        "space-before-function-paren": ["error", "never"],
        "semi": "off",
        "no-extra-semi": "off"
    }
}
